<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="product_template_attribute_value_view_tree_inherit_scheel" model="ir.ui.view">
            <field name="name">product.template.attribute.value.view.tree.inherit.scheel</field>
            <field name="model">product.template.attribute.value</field>
            <field name="inherit_id" ref="product.product_template_attribute_value_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_extra']" position="after">
                    <field name='cost_extra' widget='monetary'/>
                </xpath>
            </field>
        </record>
        <record id="product_template_attribute_value_view_form_inherit_scheel" model="ir.ui.view">
            <field name="name">product.template.attribute.value.view.form.inherit.scheel</field>
            <field name="model">product.template.attribute.value</field>
            <field name="inherit_id" ref="product.product_template_attribute_value_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_extra']" position="after">
                    <field name='cost_extra' widget='monetary'/>
                </xpath>
            </field>
        </record>
</odoo>